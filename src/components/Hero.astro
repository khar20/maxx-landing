<style>
	#type {
		animation:
			typing 2s steps(52),
			cursor 0.4s step-end infinite alternate;
	}

	@keyframes typing {
		from {
			width: 0;
		}
		to {
			width: 100%;
		}
	}

	@keyframes cursor {
		50% {
			border-color: transparent;
		}
	}
</style>

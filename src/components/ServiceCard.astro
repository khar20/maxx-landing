---
import { Image } from 'astro:assets';

const { title, description, image } = Astro.props;
---

<div
	class="border border-black p-5 transition-all duration-100 ease-in-out hover:bg-gray-100 dark:border-white dark:hover:bg-gray-800"
>
	<h1 class="text-2xl font-bold">{title}</h1>
	<p>{description}</p>
	<Image
		src={image}
		alt={title}
		height="100"
		width="100"
		class="rounded-md object-cover"
	/>
</div>

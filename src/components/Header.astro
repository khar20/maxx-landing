---
const navItems = [
	{ title: 'Inicio', label: 'inicio', url: '/' },
	{ title: 'Contacto', label: 'contacto', url: '/contact' },
	{ title: 'Acerca', label: 'acerca', url: '/about' },
];
---

<header class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2">
	<nav class="flex px-3 text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center items-center">
		{
			navItems.map((item) => (
				<a
					class="relative block px-2 py-2 transition hover:text-blue-500
					dark:hover:text-blue-500"
					aria-label={item.label}
					href={item.url}
				>
					{item.title}
				</a>
			))
		}
	</nav>
</header>

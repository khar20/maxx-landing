---
import ThemeSelector from './ThemeSelector.astro';

const navItems = [
	{ title: 'Servicios', label: 'servicios', url: '/#services' },
	{ title: 'Precios', label: 'precios', url: '/pricing' },
	{ title: 'Contacto', label: 'contacto', url: '/#contact' },
	{ title: 'Sobre nosotros', label: 'sobre-nosotros', url: '/#about' },
];
---

<header
	class="bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-40 w-full border-b backdrop-blur"
>
	<div class="container mx-auto flex h-16 items-center justify-between">
		<div class="flex items-center gap-2"></div>
		<nav class="hidden gap-6 md:flex">
			{
				navItems.map((item) => (
					<a
						class="hover:text-primary relative block px-2 py-2 text-sm font-medium transition-colors hover:text-blue-500 dark:hover:text-blue-500"
						aria-label={item.label}
						href={item.url}
					>
						{item.title}
					</a>
				))
			}
		</nav>
		<ThemeSelector />
	</div>
</header>

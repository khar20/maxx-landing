---
import ThemeSelector from './ThemeSelector.astro';

const navItems = [
	{ title: 'Servicios', label: 'servicios', url: '/#services' },
	{ title: 'Precios', label: 'precios', url: '/pricing' },
	{ title: 'Contacto', label: 'contacto', url: '/#contact' },
	{ title: 'Sobre nosotros', label: 'sobre-nosotros', url: '/#about' },
];
---

<header class="bg-background/95 fixed top-0 z-40 mx-auto flex w-full items-center justify-center border-b backdrop-blur not-last-of-type:z-10">
	<div></div>
	<nav class="flex items-center justify-center rounded-full px-3 text-sm font-medium text-gray-600 dark:text-gray-200">
		<div class="flex gap-4">
			{
				navItems.map((item) => (
					<a
						class="relative block px-2 py-2 transition hover:text-blue-500 dark:hover:text-blue-500"
						aria-label={item.label}
						href={item.url}
					>
						{item.title}
					</a>
				))
			}
		</div>
		<ThemeSelector />
	</nav>
</header>

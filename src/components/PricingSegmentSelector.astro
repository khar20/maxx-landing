---
export interface Props {
	activeSegment: 'personal' | 'empresarial';
}

const { activeSegment } = Astro.props;
---

<div class="mb-10 flex justify-center">
	<div class="inline-flex rounded-lg bg-gray-100 p-2 dark:bg-gray-700">
		<a
			class={`segment-btn px-6 py-3 rounded-l text-sm font-medium transition-colors duration-200 ${
				activeSegment === 'personal'
					? 'bg-white dark:bg-gray-800 shadow text-blue-600 dark:text-blue-400'
					: 'text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'
			}`}
		>
			Personal
		</a>
		<a
			class={`segment-btn px-6 py-3 rounded-r text-sm font-medium transition-colors duration-200 ${
				activeSegment === 'empresarial'
					? 'bg-white dark:bg-gray-800 shadow text-blue-600 dark:text-blue-400'
					: 'text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'
			}`}
		>
			Empresarial
		</a>
	</div>
</div>
